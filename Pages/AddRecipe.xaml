<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ShoppingList.Pages.AddRecipesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add Recipes">

	<ContentPage.Content>
		<VerticalStackLayout
            Padding="20"
            Spacing="10"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Label
                Text="Add Recipes Page"
                FontSize="24"
                HorizontalOptions="Center" />
            <Button
                Text="Go Home"
                Command="{Binding GoToHomeCommand}" />

		</VerticalStackLayout>
	</ContentPage.Content>
</ContentPage>
